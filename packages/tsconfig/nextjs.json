{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",

  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
